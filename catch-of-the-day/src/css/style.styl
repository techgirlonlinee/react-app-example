// Import all partials
@require './_*.styl'

p
  margin-block-start 0
  margin-block-end 0

header.heading 
  position fixed
  display flex
  flex-direction row
  width 91vw
  justify-content space-between
  a.logo
    // font-size 4rem
    margin-left 17px
    // font-size: 100px;
    font-size 7rem
    letter-spacing -5px
  .more 
    display flex
    flex-direction column
    width 420px
    text-align left
    margin-top 20px
    .description
      font-size 1.125rem
      margin-top 0
      width 440px
      text-align left
      margin-bottom 0
    a.filters 
      width 100px
      height 20px
      border-radius 5px
      margin-top 1rem
      display flex
      border 1px solid black
      font-size 0.75 rem
      position absolute
      top 68px
      right -7px
      p
        padding-left 5px
        margin-top 2px
      img 
        margin-left 10px

.catch-of-the-day
  display flex
  // display grid
  height 100vh
  max-width:1500px
  margin 0 auto
  margin-top 0
    

// Folding Transforms
// Take off folding when not checked
input#fold:not(:checked) ~ #main
  .catch-of-the-day > *
    transform none

label[for="fold"]
  display none

input#fold
  display none
  &:checked + label
    background white
    color black

ul
  list-style none
  margin 0
  padding 0

ul.order
  // Default state
  margin-top: -20px;
  li
    border-bottom 1px solid #c2d880
    padding 1.75rem 0
    display flex
    font-size 1.12rem
    flex-direction column
    margin 0 24px
    .cart-name
      display flex
      justify-content space-between
      font-weight 500
    .selected-size
      font-size 0.75rem
      margin 6px 0
    .value-discard
      display flex
      justify-content space-between
    &:hover
      button
        display inline
    button
      border 0
      // display none
      line-height 1
      padding 0
    &.unavailable
      text-decoration line-through
      background lighten(red, 80%)
    .price
      font-size 1.2rem
    span.count
      position relative
      overflow hidden
      float left // only works if it's floated?!
      span
        display inline-block
        // transition all 0.5s
    .close-button img
      opacity 1
.total
  padding 2rem 0
  font-family "Everett"
  font-size 1.4rem
  margin 0 24px
  & strong
    float: right

h2.order-title
  text-align center
  margin-top 20px

.fish-edit
  position relative
  border 1px solid black
  overflow hidden
  display flex
  flex-wrap wrap
  width 250px
  height 250px
  margin 0 24px 20px 29px
  background-color #FFFEFA
  select
    display none
  input, textarea, select
    width 100%
    padding 10px
    line-height 1
    font-size 1.2rem
    border 0
    appearance none
    border-radius 0
    background white
    &:focus
      outline 0
      background lighten(orange, 85%)
  input
    font-size 1.25rem
    font-weight 500
  textarea
    width 88.5%
    font-size 0.875rem
    margin-top -18px
    padding-bottom 0
    resize none
  input:last-of-type
    width 100%
  .price-text
    // margin-top -26px
    z-index 2
    padding 0
    margin 0 0 0 10px;
  input.creator-name
    width 80%
    padding 0
    margin 0
    // margin-top -15px
    margin-left 10px
    z-index 3
    font-size 0.75rem
    font-weight 300
  button.remove-fish, .addFish-button
    width 100%
    border none
    border-top 1px solid black
    border-radius 0
    position absolute
    right -111px
    top 108px
    transform rotate(-90deg)
    width 250px
    font-size 1.125rem
    font-weight 500
    text-align end
    padding-right 17px
    padding-top 5px
    padding-bottom 4px
    &:hover
      background-color black
      color white
  .image-text
    font-size 0.875rem
  .sizing
    .row
      display flex
      justify-content space-between
      width 86%
      height 20px
      margin 5px
      margin-left 10px
      .labels, .field
        display flex
        justify-content start
        margin-left 2px
        width 50%
      .labels
        span
          opacity 0.4
          font-weight 500
          margin-right 5px
          padding 0 4px
          &.active
            opacity 1
            border 1px solid black
            border-radius 50%
        .m-active
          padding 0 2px
        .l-active
          padding 0 5px
      .medium_label
        font-weight bold
      .field
        input.quantity
          border-bottom 1px solid black
          width 50%

// Menu Styles
.overlay 
  position fixed
  top 0px
  left 0px
  width 100vw
  height 200px
  background linear-gradient(#D2fe51, transparent 80%)

.list-of-fish
  border-top 2px solid black
  border-bottom 1px solid black
  padding-top 5px
  margin-top 2rem
  transform translateZ(0);

ul.fishes 
  display flex
  flex-direction row
  flex-wrap wrap
  max-width 1084px
  margin auto
  margin-top 120px

.menu-fish
  padding-bottom 2rem
  padding-top 2rem
  margin-bottom 5px
  clear both
  overflow hidden
  display flex
  flex-direction column
  width 220px
  margin 24px
  p.fish-desc
    margin 0
    font-size 0.85rem
    font-weight 400
    height 32px
  textarea
    resize none
  .creator-name
    font-weight 300
    font-size 0.75rem
    margin-top 6px
  .fish-name
    margin 0
    display flex
    justify-content space-between
    align-items center
    margin-bottom 6px
    font-size 1.5rem
  div.number-details
    display flex
    justify-content space-between
    align-items center
    margin-top 7px
    .price
      font-size 1.5rem
      justify-content flex-end
      margin-top 12px
    .sizes
      display flex
      justify-content space-between
      .field_group
        position relative
        margin-right 10px
        margin-top 10px
        label, .labels
          border 1px solid transparent
          font-size 0.875rem
          font-weight 500
          position relative
          z-index 2
          cursor pointer
          padding 1px 4px 0px 4px
          display inline-block
          height 20px
          width 20px
          margin-top 5px
          span
            position absolute
            top 57%
            left 51%
            transform translate(-50%, -50%)
          &.active
            //margin-right -5px
            // font-weight bold
            border 1px solid black
            border-radius 50%
            padding 1px 4px 0px 4px
        .large_label
          //padding: 0px 4px;
        input
          opacity 0
          position absolute
          // left 0
          // top 0
          z-index 1
          left -6px
          top -1px
          z-index 1
          width 23px
          height 20px
        #medium
          left -3px

  img
    width 220px
    height 280px
    margin-bottom 24px
  button.addTo 
    width 150px
    height 44px
    text-align center
    margin auto
    margin-top 10px
    border-radius 80%
    font-size 0.85rem
    font-family "Everett"
    font-weight 500
    &:hover 
      color white
      background-color black

button, input[type=submit]
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  font-size 0.85rem
  font-family "Everett", sans-serif
  transition all 0.2s
  position relative
  z-index 2
  border-radius 80%
  &[disabled]
    display none
    .menu-fish
      opacity 0.4
    // color red
    // background white
    // border-color red
    // transform rotate(-10deg) scale(2) translateX(50%) translateY(-50%)
    &:hover
      // color red
      cursor not-allowed
    &:after
      display none
  &:hover, &:focus
    color black
    outline 0
    border-radius 80%
    &:after
      height 100%
      border-radius 80%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

  &.github
    color black
    background grey
    padding 10px 30px
    font-weight 500
    &:hover
      background black
      color white

// Store Selector
.store-selector
  background white
  max-width 500px
  margin 50px auto
  padding 2rem
  border 2px solid black
  input, button
    width 100%
    &[type="text"]
      text-align center
      font-size 3rem

.container
  .drawer
    position relative
    overflow visible
    z-index 2
    .tab
      display flex
      position absolute
      justify-content center
      // align-items center
      align-items end
      width 78px
      background-color grey
      height 50vh
      border-radius 0
      // border none
      //display block
      left 0
      span.drawer-title
        display flex
        transform rotate(-90deg) 
        font-size 3.375rem
        font-weight 500
        margin-top 81px
        .items-amount
          display inline-block
          width 30px
          height 30px
          border-radius 50%
          background-color black
          color white
          position relative
          margin-top 15px
          margin-left 10px
          .num
            display block
            position absolute
            left 50%
            top 50%
            font-size 15px
            text-align center
            transform rotate(90deg) translate(-9px, 6px)
      span.title-vendor
        margin-top 104px
      &:hover
        background-color #DBFD77
        color black
      &:visited
        background-color #DBFD77
        color black
        // &:after
        // background-color grey
      &.cart
        top 0
        border 1px solid black
        

      &.vendor
        bottom 0
        // background-color grey
        border-top none
    .cart-drawer
      background-color#DBFD77
        
    .vendor-drawer
      background-color #DBFD77

    .sub-drawer
      padding-left 78px
      position absolute
      overflow-y scroll
      overflow-x visible
      height 100%
      width 100%
      top 0
      left 0
      border 1px solid black
       

